generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Reminder {
  id             Int      @id @default(autoincrement())
  castId         String
  userFid        String
  authorUsername String
  timestamp      Int
  processed      Boolean  @default(false)
  createdAt      DateTime @default(now())
}
